@model QLDoDungTreEm.Models.Register
@using BotDetect.Web.Mvc;
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
@{ MvcCaptcha registerCapcha = new MvcCaptcha("registerCapcha");
    registerCapcha.UserInputID = "CaptchaCode";}
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Category
{
    <div class="sub-cate">
        @{ Html.RenderAction("_CategoriesLeft", "Home");}
    </div>
}
<div class="register">
    @using (Html.BeginForm("Register", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="register-top-grid">
            <h3>THÔNG TIN CÁ NHÂN</h3>
            <div class="mation">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">@ViewBag.Success</div>
                }

                @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "datepicker txt", placeholder = "Enter Drop-off date here..." } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "lbl" })
                @Html.EnumDropDownListFor(model => model.GioiTinh, "Select Gender", new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="register-bottom-grid">
            <h3>THÔNG TIN ĐĂNG NHẬP</h3>
            <div class="mation">

                @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = "lbl", id = "taikhoankh_register" })
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "txt", placeholder = "Password", @type = "password" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.XacNhanMatKhau, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "txt", placeholder = "Password", @type = "password" } })
                @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })

                <br /><br /><br />
                @Html.Captcha(registerCapcha)
                @Html.TextBox("CaptchaCode")
            </div>
        </div>
        <div class="clearfix"> </div>
        <div class="register-but">
            <input type="submit" value="Register" />
            <div class="clearfix"></div>
        </div>

    }
</div>