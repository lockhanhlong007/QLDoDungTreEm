@model QLDoDungTreEm.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Category
{
    <div class="sub-cate">
        @{ Html.RenderAction("_CategoriesLeft", "Home");}
    </div>
}

<div class="account_grid">
    @using (Html.BeginForm("Login", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="login-right">
            <h3>Login</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = "lbl" })
                @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "lbl" })
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "txt", placeholder = "Password", @type = "password" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class=" login-left">
            <input type="submit" value="Login">
            <a class="acount-btn" href="@Url.Action("Register","Customer")">Create an Account</a>
        </div>
        <div class="clearfix"> </div>
    }
</div>